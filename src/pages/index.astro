  <script>
    // How it works tabs
    const howTabs = document.querySelectorAll('.how-tab');
    const howImage = document.getElementById('how-it-works-image');

    howTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Update active states
        howTabs.forEach(t => {
          t.classList.remove('border-gray-900', 'bg-gray-50');
          t.classList.add('border-gray-200');
          t.removeAttribute('data-active');
        });
        tab.classList.add('border-gray-900', 'bg-gray-50');
        tab.classList.remove('border-gray-200');
        tab.setAttribute('data-active', 'true');

        // Update image
        if (howImage) {
          howImage.style.opacity = '0';
          setTimeout(() => {
            howImage.src = tab.dataset.image;
            howImage.style.opacity = '1';
          }, 150);
        }
      });
    });

    // Features tabs
    const featureTabs = document.querySelectorAll('.feature-tab');
    const featuresImage = document.getElementById('features-image');

    featureTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Update active states
        featureTabs.forEach(t => {
          t.classList.remove('border-gray-900');
          t.classList.add('border-gray-200');
          t.removeAttribute('data-active');
        });
        tab.classList.add('border-gray-900');
        tab.classList.remove('border-gray-200');
        tab.setAttribute('data-active', 'true');

        // Update image
        if (featuresImage) {
          featuresImage.style.opacity = '0';
          setTimeout(() => {
            featuresImage.src = tab.dataset.image;
            featuresImage.style.opacity = '1';
          }, 150);
        }
      });
    });
  </script>
